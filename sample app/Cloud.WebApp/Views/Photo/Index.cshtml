@model Cloud.WebApp.Models.ImageSearchViewModel 
<div class="widget">
    <div class="widget-header">
        <i class="icon-user"></i>
        <h3>Download Image</h3>
    </div>
    <div class="widget-content">
        @using (Html.BeginForm("Index", "Photo", FormMethod.Post, new { @class = "form-search" }))
        {
            <div class="input-append">
                <input type="text" name="fileName" id ="fileName" class="span2 search-query" placeholder="Enter file name">
                <button id="Button1">Download File</button>
            </div>
        }
   
                <img id="Img1"  alt="" src="" width="80%"/>    

    </div>
    <script>
        $(document).ready(function () {
            $('#Button1').click(function (e) {
                var url = "@Url.Action("", null, null, "http")" + "/Image?name=" + $("input#fileName").val();
                $("#Img1").attr("src", url);
                e.preventDefault;
                return false;
            });
        });
    </script>
</div>




