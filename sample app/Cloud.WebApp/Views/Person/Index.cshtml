@model Cloud.WebApp.Models.PersonSearchViewModel 
<div class="widget">
    <div class="widget-header">
        <i class="icon-user"></i>
        <h3>Search Person - On Premise Adventure Works DB</h3>
    </div>
    <div class="widget-content">
        @using (Html.BeginForm("Index", "Person", FormMethod.Get, new { @class = "form-search" }))
        {
            <div class="input-append">
                <input type="text" name="SearchCriteria" class="span2 search-query" placeholder="Search by keyword">
                <input name="SearchButton" type="submit" class="btn" value="Index" />
            </div>
        }
        @if (Model.Results != null)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="optional">Code</th>
                        <th>Title</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th class="optional">Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.Results)
                    {
                        <tr>
                            <td>@result.rowguid</td>
                            <td>@result.Title</td>
                            <td>@result.FirstName</td>
                            <td>@result.LastName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
